{
  "name": "webrtc-peer",
  "description": "Simple one-to-one WebRTC video/voice and data channels",
  "version": "9.11.0",
  "author": {
    "name": "Feross Aboukhadijeh",
    "email": "feross@feross.org",
    "url": "https://feross.org"
  },
  "bugs": {
    "url": "https://github.com/feross/simple-peer/issues"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "debug": "^4.3.1",
    "err-code": "^3.0.1",
    "get-browser-rtc": "^1.1.0",
    "queue-microtask": "^1.2.3",
    "randombytes": "^2.1.0",
    "readable-stream": "^3.6.0",
    "webrtc-adapter": "^7.7.1"
  },
  "devDependencies": {
    "airtap": "^4.0.3",
    "airtap-manual": "^1.0.0",
    "airtap-sauce": "^1.1.2",
    "babel-minify": "^0.5.1",
    "bowser": "^2.11.0",
    "browserify": "^17.0.0",
    "dotenv-cli": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-bytes": "^1.0.4",
    "speedometer": "^1.1.0",
    "string-to-stream": "^3.0.1",
    "tape": "^5.2.2",
    "wrtc": "^0.4.7",
    "ws": "^7.4.5"
  },
  "keywords": [
    "data",
    "data channel",
    "data channel stream",
    "data channels",
    "p2p",
    "peer",
    "peer",
    "peer-to-peer",
    "stream",
    "video",
    "voice",
    "webrtc",
    "webrtc stream"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/jzombie/webrtc-peer.git"
  },
  "scripts": {
    "build": "browserify -s WebRTCPeer -r . | minify > webrtc-peer.min.js",
    "size": "npm run build && cat webrtc-peer.min.js | gzip | wc -c",
    "test": "npm run lint && npm run test-browser",
    "// test": "npm run lint && npm run test-node && npm run test-browser",
    "test-browser": "dotenv airtap --coverage --concurrency 1 -- test/*.js",
    "test-browser-local": "dotenv airtap --coverage --preset --local -- test/*.js",
    "test-node": "WRTC=wrtc tape test/*.js",
    "// coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm run test-node",
    "lint": "prettier --write '(**/)*.js'"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/feross"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/feross"
    },
    {
      "type": "consulting",
      "url": "https://feross.org/support"
    }
  ]
}
